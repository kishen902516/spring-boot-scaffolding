{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub MCP server for repository management, PR creation, and project boards"
    }
  },
  "configuration": {
    "github": {
      "capabilities": [
        "repository_management",
        "pull_request_creation",
        "issue_tracking",
        "project_boards",
        "branch_management",
        "workflow_dispatch"
      ],
      "settings": {
        "default_branch": "main",
        "pr_template": true,
        "auto_assign_reviewers": false,
        "require_approval": true,
        "enable_auto_merge": false
      }
    }
  }
}